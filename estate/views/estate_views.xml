<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="estate.tree">
      <field name="name">estate.property.tree</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="bedrooms"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="estate.action_window">
      <field name="name">Properties</field>
      <field name="res_model">estate.property</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Three Level Menu -->

    <menuitem id="estate.menu_root" name="Real Estate">
        <menuitem id="estate.menu_1" name="Advertisements">
            <menuitem id="estate.menu_1_list" action="estate.action_window"/>
        </menuitem>
    </menuitem>


